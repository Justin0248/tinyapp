    <main style="margin: 1em;">
        <form class = "form-center" method ="POST" action="/registration">
          Email address
          <div></div>
          <input
                class="form-center"
                type="email"
                name="email"
                placeholder="email"
                style="width: 300px; margin: 1em"
              />
              <div></div>
             Password
             <div></div>
             <input
              class="form-center"
              type="password"
              name="password"
              placeholder="password"
              style="width: 300px; margin: 1em"
            />
            <button type="submit">Register</button>
        </form>
</body>
